<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Chat with Alice | DarkSocial</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      :root {
        --gradient-start: #8e2de2;
        --gradient-end: #ff6ec4;
        --bg: #121212;
        --card: #1f1f1f;
        --text: #f1f1f1;
        --muted: #aaa;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Segoe UI", sans-serif;
      }

      body {
        display: flex;
        background-color: var(--bg);
        height: 100vh;
        overflow: hidden;
        color: var(--text);
      }

      .sidebar {
        width: 280px;
        background: #1a1a1a;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        height: 100vh;
        border-right: 1px solid #2a2a2a;
      }

      .sidebar-header {
        padding: 16px;
        background: linear-gradient(
          to right,
          var(--gradient-start),
          var(--gradient-end)
        );
        text-align: center;
        font-size: 18px;
        font-weight: bold;
      }

      .contact {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        cursor: pointer;
        transition: background 0.2s;
        text-decoration: none;
        color: var(--text);
      }

      .contact:hover {
        background-color: #2a2a2a;
      }

      .contact img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
      }

      .contact-info {
        display: flex;
        flex-direction: column;
      }

      .contact-info span.name {
        font-weight: 500;
        color: var(--text);
      }

      .contact-info span.status {
        font-size: 12px;
        color: var(--muted);
      }

      .chat-container {
        display: flex;
        flex-direction: column;
        flex: 1;
        height: 100vh;
        width: 100%;
      }

      .chat-header {
        background: linear-gradient(
          to right,
          var(--gradient-start),
          var(--gradient-end)
        );
        padding: 16px;
        font-size: 18px;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .chat-header a.back {
        display: none;
        color: white;
        font-size: 18px;
      }

      .messages {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 12px;
        padding: 20px;
        overflow-y: auto;
      }

      .message {
        padding: 12px 16px;
        border-radius: 18px;
        font-size: 15px;
        line-height: 1.4;
        box-shadow: 0 2px 6px #00000030;
        max-width: 70%;
      }

      .message.incoming {
        background-color: var(--card);
        align-self: flex-start;
        color: var(--text);
      }

      .message.outgoing {
        background: linear-gradient(
          to right,
          var(--gradient-start),
          var(--gradient-end)
        );
        color: white;
        align-self: flex-end;
      }

      .chat-input {
        display: flex;
        padding: 12px 16px;
        background-color: #1a1a1a;
        border-top: 1px solid #2a2a2a;
      }

      .chat-input input {
        flex: 1;
        padding: 10px 15px;
        border-radius: 25px;
        border: none;
        background-color: #2b2b2b;
        color: var(--text);
        outline: none;
      }

      .chat-input button {
        background: linear-gradient(
          to right,
          var(--gradient-start),
          var(--gradient-end)
        );
        color: white;
        border: none;
        border-radius: 50%;
        width: 42px;
        height: 42px;
        margin-left: 10px;
        cursor: pointer;
        font-size: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s;
      }

      .chat-input button:hover {
        transform: scale(1.1);
      }

      /* Hide sidebar on mobile and add back arrow */
      @media (max-width: 768px) {
        .sidebar {
          display: none;
        }

        .chat-container {
          width: 100%;
        }

        .chat-header a.back {
          display: inline;
        }
      }
    </style>
  </head>
  <body>
    <!-- Sidebar (hidden on mobile) -->
    <div class="sidebar">
      <div class="sidebar-header">Contacts</div>
      <a href="chat-contact1.html" class="contact">
        <img
          src="https://randomuser.me/api/portraits/women/44.jpg"
          alt="User 1"
        />
        <div class="contact-info">
          <span class="name">Alice</span>
          <span class="status">Online</span>
        </div>
      </a>
      <a href="chat-contact2.html" class="contact">
        <img
          src="https://randomuser.me/api/portraits/men/35.jpg"
          alt="User 2"
        />
        <div class="contact-info">
          <span class="name">John</span>
          <span class="status">Offline</span>
        </div>
      </a>
    </div>

    <!-- Chat area -->
    <div class="chat-container">
      <div class="chat-header">
        <a href="contacts.html" class="back"
          ><i class="fas fa-arrow-left"></i
        ></a>
        Chat with Alice
      </div>

      <div class="messages">
        <div class="message incoming">Hey! How are you?</div>
        <div class="message outgoing">I'm good, thanks! How about you?</div>
        <div class="message incoming">
          I'm doing great! Let's catch up soon.
        </div>
      </div>

      <div class="chat-input">
        <input type="text" placeholder="Type your message..." />
        <button><i class="fas fa-paper-plane"></i></button>
      </div>
    </div>
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <script>
      const socket = io("http://localhost:3000");
    </script>
  </body>
</html>
